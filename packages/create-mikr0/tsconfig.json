{
  "include": ["build.js", "index.js"],
  "compilerOptions": {
    "target": "ESNext",
    "moduleDetection": "force",
    "module": "ESNext",
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
